# Environment variables for Video Cutter Task Manager
# Copy this file to .env and fill in your actual values

# Core API Keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Database Configuration
POSTGRES_URL=

# Whisper Configuration - defaults to small if not set
WHISPER_MODEL=small

# CORS Configuration for frontend
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# VAST.AI Configuration
VAST_API_KEY=
VAST_API_BASE="https://console.vast.ai/api/v0"
VAST_INSTANCE_ID=
VAST_SSH_KEY=
VAST_CUT_BASE_DIR=/workspace/cut
VAST_REMOTE_BASE_DIR=/
VAST_DETAILS_TTL=0
VAST_DISABLE_AUTO_STOP=1
VAST_STOP_ACTIVITY_WINDOW=600
VAST_SSH_HOST=
VAST_SSH_PORT=35100
VAST_REMOTE_INBOX=/workspace/aporto/upscale/inbox
VAST_REMOTE_OUTBOX=/workspace/aporto/upscale/outbox
VAST_SSH_USER=root

# GPU/Upscale Configuration
CUT_ON_GPU=0
VAST_UPSCALE_URL=
VAST_DISABLE_ENSURE=0
VAST_DISABLE_AUTO_STOP=0

# GPU SSH Configuration
GPU_SSH_HOST=
GPU_SSH_PORT=35100
GPU_SSH_USER=root
GPU_CUT_BASE_DIR=/workspace/cut

# Upscale Configuration
UPSCALE_UPLOAD_CONCURRENCY=1
UPSCALE_CONCURRENCY=2
UPSCALE_RESULT_DOWNLOAD_CONCURRENCY=1
UPSCALE_MODEL_NAME=realesr-general-x4v3
UPSCALE_DENOISE_STRENGTH=0.5
UPSCALE_FACE_ENHANCE=1
UPSCALE_OUTSCALE=4

# Hugging Face Token
HUGGINGFACE_TOKEN=

# Model Paths
GFPGAN_MODEL_PATH=/workspace/aporto/upscale/models/GFPGANv1.4.pth
REALESRGAN_MODEL_PATH=/workspace/aporto/upscale/models/realesr-general-x4v3.pth
XDG_CACHE_HOME=/workspace/aporto/upscale/models

# Cut Configuration
CUT_BASE_DIR=/workspace/cut
CUT_REQUIRE_CUDA=1
CUT_FORCE_DEVICE=cuda
CUT_ENABLE_UPSCALE=0


